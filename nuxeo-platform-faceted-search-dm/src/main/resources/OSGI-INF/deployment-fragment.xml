<?xml version="1.0"?>
<fragment version="1">

  <require>org.nuxeo.ecm.platform.lang</require>

  <extension target="web#STD-AUTH-FILTER">
    <!-- auth filter configuration, filter is defined in web-common -->
    <filter-mapping>
      <filter-name>NuxeoAuthenticationFilter</filter-name>
      <url-pattern>/nxsrch/*</url-pattern>
      <dispatcher>REQUEST</dispatcher>
      <dispatcher>FORWARD</dispatcher>
    </filter-mapping>
  </extension>

  <install>
    <!--  unzip the war template -->
    <unzip from="${bundle.fileName}" to="/" prefix="web">
      <include>web/nuxeo.war/**</include>
    </unzip>

    <mkdir path="nuxeo.faceted.search.tmp" />
    <unzip from="${bundle.fileName}" to="nuxeo.faceted.search.tmp" />
    <append
      from="nuxeo.faceted.search.tmp/OSGI-INF/l10n/messages_fr.properties"
      to="nuxeo.war/WEB-INF/classes/messages_fr.properties" addNewLine="true" />
    <append
      from="nuxeo.faceted.search.tmp/OSGI-INF/l10n/messages_en.properties"
      to="nuxeo.war/WEB-INF/classes/messages_en.properties" addNewLine="true" />
    <delete path="nuxeo.faceted.search.tmp" />
  </install>

</fragment>

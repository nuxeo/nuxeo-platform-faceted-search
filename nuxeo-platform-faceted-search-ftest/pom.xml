<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <groupId>org.nuxeo.ecm.platform</groupId>
    <artifactId>nuxeo-platform-faceted-search-parent</artifactId>
    <version>5.4.0-I20101008_1630</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <artifactId>nuxeo-platform-faceted-search-ftest</artifactId>
  <name>Nuxeo Platform Faceted Search Functionnal Tests</name>
  <description>Nuxeo Platform Faceted Search Functionnal Tests</description>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-dependency-plugin</artifactId>
        <configuration>
          <artifactItems>
            <artifactItem>
              <groupId>org.seleniumhq.selenium.server</groupId>
              <artifactId>selenium-server</artifactId>
              <classifier>standalone</classifier>
              <overWrite>false</overWrite>
              <outputDirectory>selenium</outputDirectory>
              <destFileName>selenium-server.jar</destFileName>
            </artifactItem>
            <artifactItem>
              <groupId>org.nuxeo.ecm.distribution</groupId>
              <artifactId>nuxeo-distribution-jboss</artifactId>
              <classifier>nuxeo-dm</classifier>
              <type>zip</type>
              <overWrite>false</overWrite>
              <outputDirectory>target</outputDirectory>
            </artifactItem>
            <!-- won't need that when nuxeo-platform-faceted-search will be integrated into Nuxeo DM -->
            <artifactItem>
              <groupId>org.nuxeo.ecm.platform</groupId>
              <artifactId>nuxeo-platform-faceted-search-api</artifactId>
              <overWrite>true</overWrite>
              <outputDirectory>target</outputDirectory>
            </artifactItem>
            <artifactItem>
              <groupId>org.nuxeo.ecm.platform</groupId>
              <artifactId>nuxeo-platform-faceted-search-jsf</artifactId>
              <overWrite>true</overWrite>
              <outputDirectory>target</outputDirectory>
            </artifactItem>
            <artifactItem>
              <groupId>org.nuxeo.ecm.platform</groupId>
              <artifactId>nuxeo-platform-faceted-search-dm</artifactId>
              <overWrite>true</overWrite>
              <outputDirectory>target</outputDirectory>
            </artifactItem>
          </artifactItems>
        </configuration>
      </plugin>
    </plugins>
  </build>

</project>
